#!/bin/bash

ln -s ~/Dotfiles/tealdeer.toml ~/.config/tealdeer/config.toml

ln -s ~/Dotfiles/vimrc ~/.config/nvim/init.vim
ln -sf ~/Dotfiles/nvim/ ~/.config/nvim

ln -sf ~/Dotfiles/tmux.conf ~/.tmux.conf
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

ln -sf ~/Dotfiles/gitconfig ~/.gitconfig

ln -sf ~/Dotfiles/htoprc ~/.config/htop/htoprc

ln -sf ~/Dotfiles/i3 ~/.i3/config

ln -sf ~/Dotfiles/alacritty.yml ~/.alacritty.yml

ln -sf ~/Dotfiles/vscode.json ~/.config/VSCodium/User/settings.json

ln -sf ~/Dotfiles/dunstrc ~/Dotfiles/dunstrc

ln -sf ~/Dotfiles/trackpadg.conf ~/.config/libinput-gestures.conf

ln -sf ~/Dotfiles/swayconfig ~/.config/sway/config

ln -sf ~/Dotfiles/mako ~/.config/mako/config

ln -sf ~/Dotfiles/config.lua ~/.config/nvim/lua/config.lua

ln -sf ~/Dotfiles/zshrc ~/.zshrc

ln -sf ~/Dotfiles/starship ~/config/starship.toml

ln -sf ~/Dotfiles/kitty.conf ~/.config/kitty/kitty.conf

ln -sf ~/Dotfiles/config.fish ~/.config/fish/config.fish

ln -sf ~/Dotfiles/hyprland.conf ~/.config/hypr/hyprland.conf

ln -sf ~/Dotfiles/waybar.json ~/.config/waybar/config
ln -sf ~/Dotfiles/waybar.css ~/.config/waybar/style.css

ln -sf ~/Dotfiles/kanshi ~/.config/kanshi/config

ln -sf ~/Dotfiles/zellij.kdl ~/.config/zellij/config.kdl

ln -sf ~/Dotfiles/jj.toml ~/.config/jj/config.toml

ln -sf ~/Dotfiles/zathurarc ~/.config/zathura/zathurarc

mkdir ~/.config/glide/
ln -sf ~/Dotfiles/glide.ts ~/.config/glide/glide.ts

mkdir ~/.config/ghostty/
ln -sf ~/Dotfiles/ghostty ~/.config/ghostty/config
